<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_error_message_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_main_error_message_padding"
            android:textSize="@dimen/activity_main_error_message_text_size"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:text="@string/movies_error_message"/>

        <ProgressBar
            android:id="@+id/pb_loading_indicator"
            android:layout_height="@dimen/activity_main_progress_bar_height"
            android:layout_width="@dimen/activity_main_progress_bar_width"
            android:layout_gravity="center"
            android:visibility="invisible"/>

    </FrameLayout>
</layout>
